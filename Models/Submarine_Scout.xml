 <nasal>
  <load>
##############################################################################
# The on-load Nasal is not executed when this file is loaded as the user
# aircraft.
##############################################################################
var rplayer = cmdarg();
print("LOAD Submarine_Scout", rplayer.getPath());

var bomb1_mpp = "sim/multiplay/generic/int[0]";
var bomb2_mpp = "sim/multiplay/generic/int[1]";
var bomb1_rp  = "controls/armament/station[0]/present";
var bomb2_rp  = "controls/armament/station[1]/present";

############################################################
# Load the needed modules if it hasn't been done yet.
if (!contains(globals, "SubmarineScout")) {
  var base = "/Submarine_Scout/Systems/scenario-network.nas";
  var file = props.globals.getNode("/sim/fg-root").getValue() ~
             "/Aircraft" ~ base;
  if (io.stat(file) != nil) {
      io.load_nasal(file, "SubmarineScout");
  } else {
    foreach (var d; props.globals.getNode("/sim").getChildren("fg-aircraft")) {
      var file = d.getValue() ~ base;
      if (io.stat(file) != nil) {
        io.load_nasal(file, "SubmarineScout");
        break;
      }
    }
  }
  # Use the minimal remote_ground_crew instead of ground_crew.
  SubmarineScout.ground_crew = SubmarineScout.remote_ground_crew;
  # Initialize scenario network as observer.
  SubmarineScout.scenario_network_init(0);
}

############################################################
# Set up property aliases for the MP model animations.
rplayer.getNode("fdm/jsbsim/animation/envelope-shape-norm", 1).
  alias(rplayer.getNode("sim/multiplay/generic/float[0]"));
rplayer.getNode(bomb1_rp, 1).
  alias(rplayer.getNode(bomb1_mpp));
rplayer.getNode(bomb2_rp, 1).
  alias(rplayer.getNode(bomb2_mpp));
##############################################################################
  </load>
  <unload>
##############################################################################
var rplayer = cmdarg();
print("UNLOAD Submarine_Scout ", rplayer.getPath());

# The ground crew is removed automatically. However, the the SubmarineScout
# module itself should be shut down if this was its last user.

##############################################################################
  </unload>
 </nasal>

</PropertyList>
