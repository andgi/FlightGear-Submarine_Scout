 <!-- Flight Controls -->
 <animation>
  <type>rotate</type>
  <object-name>elevator_wheel</object-name>
  <property>surface-positions/elevator-pos-norm</property>
  <interpolation>
   <entry>
    <ind>-1.0</ind>
    <dep> 360</dep>
   </entry>
   <entry>
    <ind>0</ind>
    <dep>0</dep>
   </entry>
   <entry>
    <ind>1.0</ind>
    <dep>-360</dep>
   </entry>
  </interpolation>
  <center>
   <x-m>  2.50 </x-m>
   <y-m>  0.00 </y-m>
   <z-m> -0.55 </z-m>
  </center>
  <axis>
   <x> 0.0 </x>
   <y> 1.0 </y>
   <z> 0.0 </z>
  </axis>
 </animation>

