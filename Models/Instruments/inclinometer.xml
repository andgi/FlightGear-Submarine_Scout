<?xml version="1.0"?>
<!-- Inclinometer -->
<!-- 
  Based an instrument from the FlightGear Sopwith Camel by
  AJ MacLeod, Vivian Meazza and Michael Selig.
-->
<PropertyList> 
 <path>inclinometer.ac</path>

 <!-- Rembrandt transparency markup. -->
 <effect>
  <inherits-from>Effects/model-transparent</inherits-from>
  <object-name>tube</object-name>
 </effect>

 <animation>
  <type>rotate</type>
  <object-name>ball</object-name>
  <property>orientation/pitch-deg</property>
  <factor>1.0</factor>
  <min>-25.0</min>
  <max>25.0</max>
  <center> 
   <x-m>0</x-m>
   <y-m>0</y-m>
   <z-m>-0.199</z-m>
  </center>
  <axis> 
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

 <!-- *** LoD *** -->
 <animation> 
  <type>range</type>
  <min-m>0</min-m>
  <max-m>5</max-m>
 </animation>

</PropertyList>
